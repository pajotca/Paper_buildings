	keywords = {2000-W/1-t CO society vision, Holistic and integrated energy systems analysis, Neighborhoods and city districts, Thermal micro-grids, Urban energy modeling},
	pages = {202--226},
	file = {ScienceDirect Full Text PDF:files/313/Fonseca et al. - 2016 - City Energy Analyst (CEA) Integrated framework fo.pdf:application/pdf;ScienceDirect Snapshot:files/312/S0378778815304199.html:text/html}
}

@article{reynders_generic_2017,
