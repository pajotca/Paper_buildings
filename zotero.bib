	month = jul,
	year = {2017},
	keywords = {Thermal storage, Active demand response, Energy flexibility},
	pages = {192--202},
	file = {ScienceDirect Full Text PDF:files/316/Reynders et al. - 2017 - Generic characterization method for energy flexibi.pdf:application/pdf;ScienceDirect Snapshot:files/315/S0306261917304555.html:text/html}
}

